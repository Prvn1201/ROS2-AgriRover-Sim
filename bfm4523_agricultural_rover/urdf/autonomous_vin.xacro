<?xml version="1.0" ?>
<robot name="Autonomous_Vin_V1" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find bfm4523_agricultural_rover)/urdf/materials.xacro" />
  <xacro:include filename="$(find bfm4523_agricultural_rover)/urdf/Autonomous_Vin_V1.ros2control" />
  <xacro:include filename="$(find bfm4523_agricultural_rover)/urdf/Autonomous_Vin_V1.gazebo" />

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="-0.002 -1.9e-05 0.132" rpy="0 0 0"/>
      <mass value="153.8"/>
      <inertia ixx="1.51" iyy="2.38" izz="3.11" ixy="0.0006" iyz="0.0001" ixz="0.021"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/base_link.stl" scale="0.001 0.001 0.001"/></geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/base_link.stl" scale="0.001 0.001 0.001"/></geometry>
    </collision>
  </link>

  <link name="lidar_1">
    <inertial>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <mass value="1.29"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" iyz="0" ixz="0"/>
    </inertial>
    <visual>
      <origin xyz="-0.05 0.0 -0.29" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/lidar_1.stl" scale="0.001 0.001 0.001"/></geometry>
    </visual>
    <collision>
      <origin xyz="-0.05 0.0 -0.29" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/lidar_1.stl" scale="0.001 0.001 0.001"/></geometry>
    </collision>
  </link>

  <joint name="lidar_joint" type="fixed">
    <origin xyz="0.05 0.0 0.29" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_1"/>
  </joint>

  <gazebo reference="lidar_1">
    <sensor name="lidar" type="gpu_lidar"> <update_rate>10</update_rate>
      <visualize>true</visualize>
      <topic>scan</topic>
      <gz_frame_id>lidar_1</gz_frame_id>
      <lidar>
        <scan>
          <horizontal>
            <samples>720</samples>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
          <resolution>0.005</resolution>
        </range>
      <noise>
      <type>gaussian</type>
      <mean>0.0</mean>
      <stddev>0.001</stddev>
      </noise>
      </lidar>
      <always_on>1</always_on>
      <visualize>1</visualize>
    </sensor>
  </gazebo>

  <link name="first_link_1">
    <inertial>
      <origin xyz="0 0 0.054" rpy="0 0 0"/>
      <mass value="9.08"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" iyz="0" ixz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.11 0 -0.2" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/first_link_1.stl" scale="0.001 0.001 0.001"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.1"/></geometry>
    </collision>
  </link>

  <link name="second_link_1">
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="1.82"/>
      <inertia ixx="0.05" iyy="0.05" izz="0.05" ixy="0" iyz="0" ixz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.09 0 -0.33" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/second_link_1.stl" scale="0.001 0.001 0.001"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry><cylinder radius="0.03" length="0.1"/></geometry>
    </collision>
  </link>

  <link name="third_link_1">
    <inertial>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <mass value="4.59"/>
      <inertia ixx="0.08" iyy="0.08" izz="0.08" ixy="0" iyz="0" ixz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.09 0 -0.421" rpy="0 0 0"/>
      <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/third_link_1.stl" scale="0.001 0.001 0.001"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
      <geometry><cylinder radius="0.03" length="0.18"/></geometry>
    </collision>
  </link>

  <joint name="Revolute 10" type="continuous">
    <origin xyz="-0.11 0.0 0.2" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="first_link_1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="Revolute 11" type="revolute">
    <origin xyz="0.02 0.0 0.13" rpy="0 0 0"/>
    <parent link="first_link_1"/>
    <child link="second_link_1"/>
    <axis xyz="-1 0 0"/>
    <limit upper="1.57" lower="-1.57" effort="500" velocity="1.0"/>
  </joint>

  <joint name="Revolute 12" type="revolute">
    <origin xyz="0 0 0.091" rpy="0 0 0"/>
    <parent link="second_link_1"/>
    <child link="third_link_1"/>
    <axis xyz="1 0 0"/>
    <limit upper="1.57" lower="-1.57" effort="500" velocity="1.0"/>
  </joint>

  <xacro:macro name="wheel_link" params="name x y">
    <link name="${name}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="9.8"/>
        <inertia ixx="0.021" iyy="0.039" izz="0.021" ixy="0" iyz="0" ixz="0"/>
      </inertial>
      <visual>
        <origin xyz="${-x} ${-y} -0.09" rpy="0 0 0"/>
        <geometry><mesh filename="file://$(find bfm4523_agricultural_rover)/meshes/${name}.stl" scale="0.001 0.001 0.001"/></geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry><cylinder radius="0.09" length="0.05"/></geometry>
      </collision>
    </link>
    <joint name="joint_${name}" type="continuous">
      <origin xyz="${x} ${y} 0.09" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="${name}"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel_link name="front_left_wheel_1"  x="0.14"  y="0.2"/>
  <xacro:wheel_link name="back_left_wheel_1"   x="-0.14" y="0.2"/>
  <xacro:wheel_link name="front_right_wheel_1" x="0.14"  y="-0.2"/>
  <xacro:wheel_link name="back_right_wheel_1"  x="-0.14" y="-0.2"/>

</robot>